CREATE TABLE customer (
    Cust_ID INT AUTO_INCREMENT PRIMARY KEY,
    Cust_name VARCHAR(30) NOT NULL,
    Mob_no VARCHAR(15) UNIQUE,
    EmailId VARCHAR(30) UNIQUE,
    City VARCHAR(20)
);



select * from customer;


ALTER TABLE customer
ADD COLUMN Pincode VARCHAR(10);                              -- Add pin code column in data 

select * from customer;


ALTER TABLE customer                                            -- change a mob_no datatype in int to bigint
MODIFY COLUMN Mob_no BIGINT;


select * from customer;


ALTER TABLE customer                                                            -- change EmailId to Email
CHANGE COLUMN EmailId Email VARCHAR(30) NOT NULL;


select * from customer;


